@using PagedList.Mvc
@model PagedList.IPagedList<BookShop.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Khách hàng</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <!-- Tìm kiếm -->
        <div class="card card-default" id="card-id">

            <div class="card-header">
                <h3 class="card-title">Tìm kiếm</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
                {
                    <div class="row">

                        <div class="col-4">
                            <div class="form-group">
                                <label>Tên</label>
                                <input type="text" name="name" id="name" value="" class="form-control" />
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="tel" name="sdt" id="sdt" value="" class="form-control" pattern="[0-9]{0-10}" />

                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="email" id="email" value="" class="form-control" />

                            </div>
                        </div>


                    </div>

                    <div class="row form-group" style="padding: 0px 7.5px;">
                        <div class="input-group input-group-lg">
                            <input type="search" class="form-control form-control-lg" placeholder="Nhập username muốn tìm" name="username" id="username">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-lg btn-default">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col" style="margin-top: 50px">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Sdt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Username)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Gender)
                                    </th>
                                </tr>

                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sdt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                    <div class="row">
                        <div class="col" style="text-align: right; margin-right:19px">
                            @Html.PagedListPager(Model, pageNum => Url.Action("Index", "Book", new { pageNum }))
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</section>

<script>
    if (document.location.search.length) {
        var urlParams = new URLSearchParams(document.location.search);

        $('#name').val(urlParams.get('name'));
        $('#email').val(urlParams.get('email'));
        $('#sdt').val(urlParams.get('sdt'));
        $('#username').val(urlParams.get('username'));

    } 
</script>